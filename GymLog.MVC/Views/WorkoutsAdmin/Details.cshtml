@model GymLog.MVC.Models.WorkoutViewModel
@{
    ViewBag.Title = "Szczegóły treningu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Breadcrumb{
    <div class="app-title">
        <div>
            <h1><i class="fa fa-handshake-o"></i> @ViewBag.Title</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"> <a href="@Url.Action("Index", "PanelAdmin")"><i class="fa fa-home fa-lg"></i></a></li>
            <li class="breadcrumb-item"> <a href="@Url.Action("Index", "WorkoutsAdmin")">Treningi</a></li>
            <li class="breadcrumb-item">@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-md-6">
    <div class="tile">
        <div class="tile-title-w-btn">
            <h3 class="title">@ViewBag.Title</h3>
            <div class="btn-group text-right">
                <a class="btn btn-primary" href="@Url.Action("Edit", "WorkoutsAdmin", new { id = Model.Id })"><i class="fa fa-lg fa-edit"></i></a>
                <a class="btn btn-primary" href="@Url.Action("Delete", "WorkoutsAdmin", new { id = Model.Id })"><i class="fa fa-lg fa-trash"></i></a>
            </div>
        </div>
        <div class="tile-body">
            <b> @Html.DisplayNameFor(model => model.Id) </b><br>
            @Html.DisplayFor(model => model.Id)
        </div>
        <div class="tile-body">
            <b> @Html.DisplayNameFor(model => model.User.UserName) </b><br>
            @Html.DisplayFor(model => model.User.UserName)
        </div>
        <div class="tile-body">
            <b> @Html.DisplayNameFor(model => model.Exercise.Name) </b><br>
            @Html.DisplayFor(model => model.Exercise.Name)
        </div>
        <div class="tile-body">
            <b> @Html.DisplayNameFor(model => model.Exercise.Description) </b><br>
            @Html.DisplayFor(model => model.Exercise.Description)
        </div>
        <div class="tile-body">
            <b> @Html.DisplayNameFor(model => model.Exercise.Muscle) </b><br>
            @Html.DisplayFor(model => model.Exercise.Muscle)
        </div>
        <div class="tile-body">
            <b> @Html.DisplayNameFor(model => model.Sets) </b><br>
            @Html.DisplayFor(model => model.Sets)
        </div>
        <div class="tile-body">
            <b> @Html.DisplayNameFor(model => model.Reps) </b><br>
            @Html.DisplayFor(model => model.Reps)
        </div>
        <div class="tile-body">
            <b> @Html.DisplayNameFor(model => model.Weight) </b><br>
            @Html.DisplayFor(model => model.Weight)
        </div>
    </div>
</div>