@model IEnumerable<GymLog.MVC.Models.ExerciseViewModel>
@{
    ViewBag.Title = "Ćwiczenia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Styles.Render("~/DatatablesCSS")

@section Breadcrumb{
    <div class="app-title">
        <div>
            <h1><i class="fa fa-bicycle"></i> @ViewBag.Title</h1>
            <p>Zarządzanie ćwiczeniami</p>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"> <a href="@Url.Action("Index", "PanelAdmin")"><i class="fa fa-home fa-lg"></i></a></li>
            <li class="breadcrumb-item">@ViewBag.Title</li>
        </ul>
    </div>
}

<div class="col-12">
    <div class="tile">
        <a href="@Url.Action("Create", "ExercisesAdmin")"><i class="fa fa-plus fa-lg"></i> Nowe ćwiczenie</a>
        <table class="table table-hover table-bordered" id="itemsTable">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        Akcje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", "ExercisesAdmin", new { id = item.Id })"><i class="fa fa-eye fa-lg"></i></a>
                            <a href="@Url.Action("Edit", "ExercisesAdmin", new { id = item.Id })"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                            <a href="@Url.Action("Delete", "ExercisesAdmin", new { id = item.Id })"><i class="fa fa-trash fa-lg"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/DatatablesJS")
    <script type="text/javascript">
        $('#itemsTable').DataTable({
            "columns": [
                { "width": "10%" },
                { "width": "30%" },
                { "width": "50%" },
                { "width": "10%" }
            ]
        });</script>
}
